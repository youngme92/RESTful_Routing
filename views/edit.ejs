<%- include ("partials/header") %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit Post</div>
    <form class="ui form" action="/index/<%=blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label for="">Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label for="">Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label for="">Contents</label>
            <textarea name="blog[body]" id="" cols="30" rows="10" placeholder="contents"><%= blog.body %>"</textarea>
        </div> 
        <button type="submit" class="positive ui big button">EDIT</button>
    </form>
</div>
<%- include ("partials/footer") %>